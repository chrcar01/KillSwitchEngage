<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="{x:Type Button}"
        TargetType="{x:Type Button}">
        <Setter
            Property="MaxHeight"
            Value="25"></Setter>
        <Setter
            Property="MaxWidth"
            Value="100"></Setter>
		<Setter
			Property="MinWidth"
			Value="80"></Setter>
        <Setter
            Property="Margin"
            Value="5"></Setter>
    </Style>
    <Style
        x:Key="{x:Type TextBox}"
        TargetType="{x:Type TextBox}">
        <Setter
            Property="MaxHeight"
            Value="25"></Setter>
        <Setter
            Property="Margin"
            Value="5"></Setter>
    </Style>
	<Style
		x:Key="{x:Type ComboBox}"
		TargetType="{x:Type ComboBox}">
		<Setter
			Property="MaxHeight"
			Value="25"></Setter>
		<Setter
			Property="Margin"
			Value="5"></Setter>
	</Style>
</ResourceDictionary>